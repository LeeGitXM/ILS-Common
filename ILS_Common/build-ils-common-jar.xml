<?xml version="1.0" encoding="UTF-8"?>
<!-- Build ils-common.jar directly into the Ignition installation area.   -->
<project name="ils.makejar" default="all" basedir=".">
	<!--
	<property name="jar.dir" value="${ignition.py.lib}/../../lib/core/common" />
	-->
	<property name="jar.dir" value="jars" />
	<property name="sdk.dir" value="${basedir}/../../ignition-80/lib" />
	<property name="jar.name" value="ils-common.jar" />
	<property name="build.dir" value="bin" />
	<property name="src.dir" value="src" />
	<property name="ant.build.javac.source" value="11"/>
	<property name="ant.build.javac.target" value="11"/>
	<property name="external.dir" value="${basedir}/../../external/lib" />
	
	<path id="ils-classpath">
		<fileset dir="${sdk.dir}">
			<include name="*.jar"/>
		</fileset>
		 <fileset dir="${jar.dir}">
		    <include name="*.jar"/>
		  </fileset>
		<fileset dir="${external.dir}">
			<include name="*.jar"/>
		</fileset>
	   <pathelement path="${build.dir}"/>
	</path>
	
	<!-- This target will build the ILS Common library and deploy it to the local filesystem -->
	<target name="all" depends="clean, build, deploy" />
	
	<!-- Remove the existing target -->
	<target name="clean" description="Remove existing build products">
		<mkdir dir="${jar.dir}"/>
		<mkdir dir="${build.dir}"/>
		<delete file="${jar.dir}/${jar.name}" failonerror="false">
            <fileset dir="${build.dir}">
                <include name="**/*.class"/>
            	<include name="**/*.png"/>
            </fileset>
        </delete>
	</target>
	
	<!-- Compile the library and make the jar file -->
	<target name="build" description="Compile the source">
		<mkdir dir="${build.dir}/images"/>
		<javac destdir="${build.dir}" debug="true" debuglevel="lines,vars,source">
		     <src path="${src.dir}"/>
		     <classpath refid="ils-classpath"/>
		</javac>
		<copy todir="${build.dir}/images" >
			<fileset dir="${src.dir}/images"/>
		</copy>
		<jar destfile="${jar.dir}/${jar.name}" includes="**/*.class,**/*.png" basedir="bin"/>
	</target>
	
	<!-- Copy the jar into the installation area for use by python -->
	<target name="deploy" >
		<echo message="Copying jar file into ${ignition.py.lib}/../../lib/core/common" />
		<copy todir="${ignition.py.lib}/../../lib/core/common">
			<!--
			<fileset dir="${ignition.py.lib}/../../lib/core/common/">
			-->
			<fileset dir="${jar.dir}">
				<include name="${jar.name}" />
			</fileset>
		</copy>
		
		<!-- Put the jars into external so that other modules will build --> 
		<echo message="Copying jar file into ${external.dir}" />
		<copy todir="${external.dir}">
			<fileset dir="${jar.dir}">
				<include name="${jar.name}" />
			</fileset>
		</copy>
	</target>	
</project>